{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-console": 2,
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 0,
    "no-unused-var": "warn",
    "no-case-declarations": 0,
    "prefer-const": 0,
    "no-empty": [1, { "allowEmptyCatch": true }],
    "camelcase": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 2,
        "import/no-named-as-default": 0,
        "import/no-named-as-default-member": 0,
        "jsx-a11y/mouse-events-have-key-events": 0,
        "no-shadow": "off",
        "no-shadow-restricted-names": "error"
      }
    ]
  }
}
